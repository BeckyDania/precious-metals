<!DOCTYPE html>
<html>
    <head>
        
		<%- include ('./partials/head.ejs') %>

    </head>
    <body>
        <h1>Metal Edit page</h1>
        
			<form action ="/metals/<%=metal.id%>?_method=PUT" method="POST">
				
					<label for="name">Metal</label>
					<input type="text" name="name"  value="<%=metal.name%>"/><br>
				<label for="form">Form</label>
					<input type="text" name="form"  value="<%=metal.form%>" /><br>

					<label for="weight">Ounces</label>
					<input type="number" name="weight"  value="<%=metal.weight%>" /><br>

					<label for="description">Description</label>
					<input type="text" name="description" id="description" value="<%=metal.description%>"/><br>

					<label for="image">Image</label>
					<input type="text" name="image" value="<%=metal.image%>" /><br>

					<label for="quantity">Quantity</label>
					<input type="number" name="quantity" value="<%=metal.quantity%>" /> <br>
				
	
					<input type="submit" id ="add" value="Edit Inventory">
				</div>
			</form>
		</div>
	
		<nav>
            <a href="/metals">Back to Index</a>
        </nav>
    </body>
</html>