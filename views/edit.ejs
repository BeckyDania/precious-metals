<!DOCTYPE html>
<html>
    <head>
        
		<%- include ('./partials/head.ejs') %>

    </head>
    <body>

		<%- include ('./partials/header.ejs') %>

        <h1>Metal Edit page</h1>
        
<div class="container">
		

			<form action ="/metals/<%=metal.id%>?_method=PUT" method="POST">
				<div class="form-group">
					<div class="form-row">
						<div class="col-2">
					<label for="name">Metal</label>
					<input type="text" name="name"  value="<%=metal.name%>"/>
					<label for="form">Form</label>
					<input type="text" name="form"  value="<%=metal.form%>" />
					<label for="weight">Ounces</label>
					<input type="number" name="weight"  value="<%=metal.weight%>" />
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="form-row">
						<div class="col-2">
					<label for="description">Description</label>
					<input class ="w-100" type="text" name="description" id="description" value="<%=metal.description%>"/>
				</div>
			</div>
	</div>

				<div class="form-group">
					<div class="form-row">
						<div class="col-2">
					<label for="image">Image</label>
					<input type="text" name="image" value="<%=metal.image%>" />
				</div>
			</div>
		</div>

				<div class="form-group">
					<div class="form-row">
						<div class="col-2">
					<label for="quantity">Quantity</label>
					<input type="number" name="quantity" value="<%=metal.quantity%>" />
				</div>
			</div>
		</div>

					<input type="submit" id ="add" value="Edit Inventory">
				</div>
			</form>
		
		<nav>
            <a href="/metals">Back to Index</a>
        </nav>
			
</div>
		<%- include ('./partials/footer.ejs') %>
    </body>
</html>