<!DOCTYPE html>
<html>
    <head>
      
        <%- include ('./partials/head.ejs') %>

    </head>
    <body>

        <%- include ('./partials/header.ejs') %>
        
        <h1>Metal show page</h1>

        <div class="container-fluid">
    
            <div class="row align-content-center justify-content-center">
                
              <div class="col" >
                 
                <div class="card" style="width: 150px;" >
                    <img class="card-img-top" src="<%= metal.image %>" alt="Card image cap">
                    <div class="card-body">
                        <p><%= metal.name %></p>
                        <p><%= metal.form %></p>
                        <p>Quantity: <%= metal.quantity %></p>
                        <p>Weight: <%= metal.weight %></p>
                        <p>Price: $<%=metal.price %> </p>
                        <p><%=metal.description %></p>
                
                    <div class="text-center">
                        <a href="/metals/<%=metal.id; %>/edit">Edit</a>
                
                        <form action="/metals/<%= metal.id %>?_method=DELETE" method="POST">
                            <button>Delete</button>
                        </form>
                        <nav>
                            <a href="/metals">Back to Index</a>
                        </nav>
                        </div>
                    </div>
                  </div>
            
              </div>

            </div>
        
          </div>

        <%- include ('./partials/footer.ejs') %>

    </body>
</html>